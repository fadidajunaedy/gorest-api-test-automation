{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // for running Node.js standard
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
